#!/usr/bin/env python2

# TODO: test handling of spaces in filenames

import optparse
import os
import os.path
import sys

class Configuration(object):
    def __init__(self, srcdir, prefix, datadir):
        self.srcdir = os.path.abspath(srcdir)
        self.prefix = os.path.abspath(prefix or '/usr/local')
        self.datadir = os.path.abspath(
            datadir or os.path.join(self.prefix, 'share'))
        self.xmlinstalldir = os.path.join(self.datadir, 'xml', 'glapi')
        self.xmlsrcdir = os.path.join(self.srcdir, 'glapi')
        self.uses_pkgconfig = sys.platform.startswith('linux')
        self.pkgdir = os.path.join(self.datadir, 'pkgconfig')

    def output_makefile(self):
        template = """\
# glapi makefile
# Automatically generated by ./configure

SRCDIR = {0.srcdir}
PKGDIR = {0.pkgdir}
XMLSRCDIR = {0.xmlsrcdir}
XMLINSTALLDIR = {0.xmlinstalldir}

all: # Nothing to do

clean: # Nothing to do

install:
\tmkdir -p ${{XMLINSTALLDIR}}
\tcp ${{XMLSRCDIR}}/*.xml ${{XMLSRCDIR}}/*.dtd ${{XMLINSTALLDIR}}
"""
        if self.uses_pkgconfig:
            template += """\
\tmkdir -p ${{PKGDIR}}
\tcp ${{SRCDIR}}/glapi.pc ${{PKGDIR}}
"""
        template += """\

.PHONY: all clean install

"""
        with open('Makefile', 'w') as f:
            f.write(template.format(self))

    def output_pkgconfig(self):
        template = """\
prefix={0.prefix}
datadir={0.datadir}

Name: glapi
Description: XML files describing the OpenGL API
Version: 1.0
"""
        with open('glapi.pc', 'w') as f:
            f.write(template.format(self))


if __name__ == '__main__':
    parser = optparse.OptionParser(
        usage='Configure glapi for the current system')
    parser.add_option(
        '--prefix', dest='prefix', metavar='prefix',
        help='install architecture-independent files in PREFIX [/usr/local]')
    parser.add_option(
        '--datadir', dest='datadir', metavar='datatir',
        help='read-only architecture-independent data [PREFIX/share]')
    options, args = parser.parse_args()
    if args:
        parser.print_help()
        exit(1)
    os.chdir(os.path.dirname(__file__))
    cfg = Configuration('.', options.prefix, options.datadir)
    cfg.output_makefile()
    if cfg.uses_pkgconfig:
        cfg.output_pkgconfig()
    print "Run 'make install' to install glapi files"
